@model RaoVar247.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/admin/Views/Shared/_EmptyLayout.cshtml";

}

<h2>Login</h2>

<div class="login-ad">
    <div class="login-form">
        @using (Html.BeginForm("Login", "Main", FormMethod.Post, new { @id = "form" }))
        {
            <div class="row-control">
                <input type="text" name="username" id="" placeholder="Tài khoản">
            </div>
            <div class="row-control">
                <input type="password" name="password" id="" placeholder="Mật khẩu">
            </div>

            <div class="row-control">
                <input type="submit" value="Đăng nhập" name="" id="" placeholder="Mật khẩu">
            </div>
            if (ViewBag.ErrorMessage != null)
            {
            <p class="text-danger">@ViewBag.ErrorMessage</p>
            }
        }
    </div>
</div>

@section Styles {
    <link href="~/Content/CSS/login-add.css" rel="stylesheet" type="text/css" />
}

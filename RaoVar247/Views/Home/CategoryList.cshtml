@model IEnumerable<RaoVar247.Models.Category>

<div id="category-list">
<h4 class="title">Danh mục sản phẩm</h4>
<hr>
<div id="list">
    @foreach(var item in Model)
            {
                <div class="category-item">
                    <a href="@Url.Action("Index","Product",new {categoryId = item.CategoryId})">
                        @if(item.Image != null)
                        {

                        <img src="~/Content/Images/@item.Image" alt="">
                        }
                        else
                        {

                        <img src="~/Content/Images/food-products-icon-vector-28759583.jpg" alt="">
                        }
                        <div class="category-name">
                            <p>@item.CategoryName</p>
                        </div>
                    </a>
                </div>
            }
  


</div>
</div>

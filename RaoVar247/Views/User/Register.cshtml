@model RaoVar247.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-login" style="height:600px">
    <div id="form" style="height: auto;">
        <div id="content" style="width: 90%;box-sizing: content-box;padding: 20px 5%;">
            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <img src="/bpch.jpg" alt="" width="100%" height="120px" />
                <h3 class="title">Đăng ký</h3>
                <div class="row-control">
                    @Html.TextBoxFor(model => model.LastName, null, new { @class = "form-control", @placeholder = "Họ, tên đệm" })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
                <div class="row-control">
                    @Html.TextBoxFor(model => model.FirstName, null, new { @class = "form-control", @placeholder = "Tên" })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
                <div class="row-control">
                    @Html.TextBoxFor(model => model.UserName, null, new { @class = "form-control", @placeholder = "User-Name" })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    @if(TempData["Nofi"] == "Duplicated")
                    {
                       <p class="text-danger">Tên tài khoản đẽ tồn tại !</p>
                    }
                </div>
                <div class="row-control">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                </div>
                <div class="row-control">
                    <input type="submit" name="loginbt" id="loginbt" value="Đăng ký" style="background-color:#fc7638;border-style: none;">
                </div>
            }
            <div class="row-control center">
                Bạn đã có tài khoản? <span><a href="">Đăng nhập</a></span>
            </div>

        </div>
    </div>
</div>

